@model System.Collections.Generic.Dictionary<int,WebApp.Models.ContactModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Contacts</h2>

<a class = "btn btn-primary" asp-action="Add" asp-controller="Contact">Add contact</a>
<h4>Contacts list</h4>
<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Last name
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var entry in @Model)
    {
        <tr>
            <td>
                @entry.Value.FirstName
            </td>
            <td>
                @entry.Value.LastName
            </td>
            <td>
                <div>
                    <a class = "btn btn-primary">Edit</a>
                    <a class = "btn btn-secondary">Details</a>
                    <a class = "btn btn-danger" asp-action="Delete" asp-route-id=@entry.Value.Id>Delete</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
    
</table>
