@model ContactModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Add contact</h2>
<div>
    <form asp-action="Add" method="post">
        <div class = "mb-3">
            <label class="form-label" asp-for="FirstName">Name</label>
            <input class="form-control"asp-for="FirstName"/>
            <span asp-validation-for="FirstName" class = "text-danger"></span>
        </div>

        <div class = "mb-3">
            <label class="form-label" asp-for="LastName">Last Name</label>
            <input class="form-control"asp-for="LastName"/>
            <span asp-validation-for="LastName" class = "text-danger"></span>
        </div>

        <div class = "mb-3">
            <label class="form-label" asp-for="Email">Email adress</label>
            <input class="form-control"asp-for="Email"/>
            <span asp-validation-for="Email" class = "text-danger"></span>
        </div>

        <div class = "mb-3">
            <label class="form-label" asp-for="PhoneNumber">Phone number</label>
            <input class="form-control"asp-for="PhoneNumber"/>
            <span asp-validation-for="PhoneNumber" class = "text-danger"></span>
        </div>

        <div class = "mb-3">
            <label class="form-label" asp-for="Birth">Date of Birth</label>
            <input class="form-control"asp-for="Birth"/>
            <span asp-validation-for="Birth" class = "text-danger"></span>
        </div>

        <div class = "mb-3">
            <label class="form-label" asp-for="Category">Category</label>
            <select class="form-control"asp-for="Category"/>
            <span asp-validation-for="Category" class = "text-danger"></span>
        </div>

        <div>
            <label asp-for="Priority"></label>
            <div>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <select class="form-control" asp-for="Priority" asp-items="@Html.GetEnumSelectList<Category>()"></select>
        </div>
        
        <button class ="btn btn-primary">Save</button>
    </form>
</div>
